[user]
    name = UserName LastName 
    email = UserEmail
    # signingkey = ABCDEFG1234567890  # Uncomment if using GPG signing

[core]
    editor = /usr/bin/emacs -nw
    pager = bat --paging=always --style=full --color=always --language=git
    autocrlf = input
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[init]
    defaultBranch = main

[color]
    ui = auto

[merge]
    tool = nvimdiff
    conflictstyle = diff3

[mergetool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$BASE" "$REMOTE" "$MERGED"
    prompt = false

[diff]
    tool = bat

[difftool "bat"]
    cmd = bat --paging=always --language=gitdiff \"$LOCAL\" \"$REMOTE\"
    prompt = false

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    syntax-theme = Dracula
    light = false

[interactive]
    diffFilter = delta --color-only

